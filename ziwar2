  <div class="container">
    <h1>مرحبًا بك في موقعي</h1>
    <p>أدخل الكود:</p>
    <input type="text" id="myCode" placeholder="أدخل الكود هنا..." />
    <br />
    <button onclick="checkCode()">تحقق</button>
    <p id="result"></p>
  </div>

  <script>
    function checkCode() {
      var code = document.getElementById("myCode").value.trim();
      var result = document.getElementById("result");
      if (code === "CODE123") {
        result.innerText = "✅ الكود صحيح";
        result.style.color = "#3a8e3a";
      } else if(code === "") {
        result.innerText = "⚠️ الرجاء إدخال كود";
        result.style.color = "#e57300";
      } else {
        result.innerText = "❌ الكود غير صحيح";
        result.style.color = "#c9302c";
      }
    }
  </script>
